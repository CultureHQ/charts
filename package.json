{
  "name": "@culturehq/charts",
  "version": "1.2.0",
  "description": "An SVG charting library",
  "main": "dist/Charts.js",
  "scripts": {
    "build": "yarn build:js && yarn build:docs",
    "build:js": "babel src --out-dir ./dist --ignore '**/__tests__/**' && cp src/style.css dist/style.css",
    "build:docs": "webpack --mode production",
    "lint": "chq-scripts lint",
    "start": "webpack-dev-server --mode development --hot",
    "test": "chq-scripts test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CultureHQ/charts.git"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CultureHQ/charts/issues"
  },
  "homepage": "https://github.com/CultureHQ/charts#readme",
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@culturehq/scripts": "^0.2.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^7.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "eslintConfig": {
    "extends": [
      "@culturehq"
    ],
    "rules": {
      "react/jsx-props-no-spreading": "off"
    }
  }
}
